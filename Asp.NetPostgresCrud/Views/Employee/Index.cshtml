@model IEnumerable<Asp.NetPostgresCrud.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
    



}

<h4>Employee Data</h4>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th> <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="fa fa-plus-square"></i> Employee</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td>
                    
                    <a asp-action="AddorEdit" asp-route-id="@item.EmployeeID"><i class="fa fa-pencil fa-lg"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
